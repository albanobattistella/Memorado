using Gtk 4.0;
using Adw 1;

template $CardNewView : Gtk.Box {

  hexpand: true;
  vexpand: true;


  Adw.ToolbarView {
    [top]
      Gtk.Label {
      label: _("New Card");
      hexpand: true;
      halign: center;

      styles ["title-1"]
    }

    content: Gtk.Box {
      orientation: vertical;
      margin-top: 6;
      margin-bottom: 24;
      margin-start: 24;
      margin-end: 24;
      spacing: 12;

      Adw.PreferencesGroup {
        title: _("Front Side");

        Gtk.Box {
          orientation: vertical;
          hexpand: true;
          vexpand: true;

          styles ["card", "text-box"]

          Gtk.Overlay {

            Gtk.ScrolledWindow {

              styles ["scrolled-window"]

              child: Gtk.TextView front_side_view {
                top-margin: 12;
                bottom-margin: 12;
                left-margin: 12;
                right-margin: 12;

                wrap-mode: word_char;
                accepts-tab: false;
                hexpand: true;
                vexpand: true;
              };

            }

            [overlay]
            Gtk.Label front_placeholder {
              visible: false;
              label: _("Insert the front side here...");
              halign: start;
              valign: start;
              margin-top: 12;
              margin-start: 12;
              sensitive: false;
            }
          }
        }
      }

      Adw.PreferencesGroup {
        title: _("Back Side");

        Gtk.Box {
          orientation: vertical;
          hexpand: true;
          vexpand: true;

          styles ["card", "text-box"]

          Gtk.Overlay {

            Gtk.ScrolledWindow {

              styles ["scrolled-window"]

              child: Gtk.TextView back_side_view {
                top-margin: 12;
                bottom-margin: 12;
                left-margin: 12;
                right-margin: 12;

                wrap-mode: word_char;
                accepts-tab: false;
                hexpand: true;
                vexpand: true;
              };

            }

            [overlay]
            Gtk.Label back_placeholder {
              visible: false;
              label: _("Insert the back side here...");
              halign: start;
              valign: start;
              margin-top: 12;
              margin-start: 12;
              sensitive: false;
            }
          }
        }
      }
    };

    [bottom]
    Gtk.Button create_card_button {
      label: _("Add");
      halign: center;
      margin-bottom: 18;

      styles ["suggested-action", "pill"]
    }
  }
}
